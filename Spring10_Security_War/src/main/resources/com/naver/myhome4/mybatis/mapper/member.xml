	<sql id="search_">
		<if test="search_field != null">
			and
			<choose>
				<when test='search_field=="id"'>id</when>
				<when test='search_field=="name"'>name</when>
				<when test='search_field=="age"'>age</when>
				<when test='search_field=="gender"'>gender</when>
			</choose> 
			like #{search_word}
		</if>
	</sql>
	
	<select id="getSearchListCount" resultType="int" parameterType="map">
		select count(*)
		from member3
		where id != 'admin'
		<include refid="search_" />	
	</select>
	
	<select id="getSearchList" parameterType="map" resultType="member">
      select * 
      from (select rownum rnum, b.*
           from (select * 
                 from member3 
                 where id != 'admin'
                 <include refid="search_"/>
                 order by id
                 ) b
           where rownum &lt;= #{end}
           )
      where rnum between #{start} and #{end}
      <!-- where rnum &gt;= #{start} and rnum &lt;= #{end}  -->
   </select>
   
   <delete id="delete" parameterType="String">
      delete from Member3
      where id = #{id}
   </delete>
	
	
